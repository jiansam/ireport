{
    "name": "tsaiyihua/laravel-ecpay",
    "description": "ecpay library for laravel",
    "type": "library",
    "keywords": ["payment", "ecpay", "laravel"],
    "require": {
        "php": ">=8.0",
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.0|^2.0|^3.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Yihua Tsai",
            "email": "tsaiyihua@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TsaiYiHua\\ECPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TsaiYiHua\\ECPay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TsaiYiHua\\ECPay\\ECPayServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
